<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/on_boarding_background1"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/on_boarding_img1"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="HardcodedText,NestedWeights"
            android:text="@string/on_boarding_topic_title1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <TextView
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="HardcodedText,NestedWeights"
            android:text="@string/on_boarding_topic_description1"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:gravity="center|top"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="15sp"
                android:textColor="@color/on_boarding_next_btn_text_color"
                android:padding="10dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>